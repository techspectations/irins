<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/snow"
    tools:context="com.jinson.irins.singlynews.StartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:layout_marginBottom="-500dp"
        android:layout_marginLeft="-500dp"
        android:layout_marginTop="-500dp"
        android:layout_marginRight="-500dp"
        android:background="@drawable/starssss"
        android:alpha="1"></ImageView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:alpha="1"></ImageView>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="175dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/singlyicon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="100dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold|italic|normal"
        android:text="Singly \n    News"
        android:textSize="50dp"/>
</RelativeLayout>
